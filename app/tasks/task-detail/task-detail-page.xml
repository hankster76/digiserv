<Page class="page" xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" >
    
    <ActionBar class="action-bar">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back" />
        <Label class="action-bar-title" text="{{ item.ItemName }}" horizontalAlignment="center" />
        <ActionItem tap="onRequestTap" ios.position="right" android.position="right">
            <Label text="Request" verticalAlignment="center" class="action-item" />
        </ActionItem>
    </ActionBar>  
    
    <GridLayout class="page-content">
        <ScrollView>
            <GridLayout rows="auto, auto, auto">
            
                <StackLayout row="1" class="hr-light m-t-15 m-b-15"></StackLayout>

                <GridLayout row="2" rows="*, *, *, *, *, *, *, *, *, *, *, *" columns="auto,auto">
                    <Label text="Service Type:" class="p-l-15 p-b-10 m-r-20 y"/>
                    <Label col="1" class="text p-b-10">
                        <Span text="{{ task.ServiceType }}" />
                    </Label>

                    <Label text="Service Date:" row="1" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.ServiceDate }}" row="1" col="1" class="text p-b-10" />
                    
                    <Label text="Part Number:" row="2" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.PartNum }}" row="2" col="1" class="text p-b-10" />

                    <Label text="Customer #:" row="3" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.CustNum }}" row="3" col="1" class="text p-b-10" />

                    <Label text="Customer Name:" row="4" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.CustName }}" row="4" col="1" class="text p-b-10" />

                    <Label text="Address:" row="5" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.Address }}" row="5" col="1" class="text p-b-10" />

                    <Label text="City:" row="6" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.City }}" row="6" col="1" class="text p-b-10" />

                    <Label text="State:" row="7" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.State }}" row="7" col="1" class="text p-b-10" />

                    <Label text="Zip Code:" row="8" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.Zip }}" row="8" col="1" class="text p-b-10" />

                    <Label text="Phone:" row="9" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.Phone }}" row="9" col="1" class="text p-b-10" />

                    <Label text="Email:" row="10" class="p-l-15 p-b-10 m-r-20 text-secondary" />
                    <Label text="{{ task.Email }}" row="10" col="1" class="text p-b-10" />

                </GridLayout>  
            </GridLayout>
        </ScrollView>
    </GridLayout>
</Page>
