<Page class="page" navigatingTo="onNavigatingTo"
    xmlns:lv="nativescript-ui-listview"
    xmlns="http://schemas.nativescript.org/tns.xsd" >

    <ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" />
        <Label class="action-bar-title" text="Service Tasks" horizontalAlignment="center" />
    </ActionBar>  

    <GridLayout class="page-content">
        <lv:RadListView items="{{ items }}" itemTap="onItemTap" class="list-group service-tab" pullToRefresh="true" row="1" pullToRefreshInitiated="{{onPullToRefreshInitiated}}"
            itemLoading="makeBackgroundTransparent">
            <lv:RadListView.itemTemplate>
                 <StackLayout class="list-group-item-2 ">
                    <!-- individual item from collection -->
                    <StackLayout backgroundColor="#ffface">
                        <Label class="font-weight-bold p-l-10">
                            <FormattedString>
                                <Span text="{{ ServiceType }}" color="red" />
                            </FormattedString>
                        </Label>
                        <Label class="font-weight-bold p-l-10" >
                            <FormattedString>
                                <Span text="{{ ServiceDate }}" />
                            </FormattedString>
                        </Label>
                        <Label class="h3 p-l-10">
                            <FormattedString>
                                <Span text="Customer:  "/>
                                <Span text="{{ CustName }}"/>
                            </FormattedString>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
        <ActivityIndicator class="activity-indicator" busy="{{ isLoading }}" />
    </GridLayout>
</Page>
